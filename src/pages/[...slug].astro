
---
import { Markdown } from "astro-remote";
import { siteConfig } from "../components/site/data";
import Layout from "../layouts/Layout.astro";
const { slug } = Astro.params;
const page = siteConfig.pages.find((p) => p.href === `/${slug}`);
if (!page) return Astro.redirect("/404");
const { name, content } = page;
---
<Layout name={name}>
    Slug page is coming - {name || "Index"}.
    <article class="prose prose-lg w-full max-w-none px-0">
        <Markdown content={content || "NO DATA"} />
    </article>
</Layout>
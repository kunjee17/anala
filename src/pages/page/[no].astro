---

import PostItemList from "../../components/PostItemList.astro";
import { dummyPosts, pageSize } from "../../components/site/data";
import Layout from "../../layouts/Layout.astro";

const { no } = Astro.params;
const pageNumber = Number(no || "1");
---
<Layout name="Home">
    <PostItemList posts={dummyPosts} pageSize={pageSize()} currentPage={pageNumber} />
</Layout>